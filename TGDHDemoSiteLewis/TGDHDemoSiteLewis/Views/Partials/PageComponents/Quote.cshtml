@using UmbracoStarterKit.Core.Models.Components
@inherits UmbracoViewPage<QuoteViewModel>
@{
    var alignment = !string.IsNullOrWhiteSpace(Model.Alignment) ? Model.Alignment.ToLower() : "default";
    var alignmentClass = "o-align--" + alignment;

	var modifierClass = "";
	if( Model.Highlighted ) {
		modifierClass = "c-quote--highlight";
	}
}

@if (!string.IsNullOrEmpty(Model.Quote.ToString()))
{
    <blockquote class="c-quote @alignmentClass @Model.AdditionalClass @modifierClass">
        <div class="c-quote__copy">@Model.Quote</div>

        @if (!string.IsNullOrWhiteSpace(Model.Source))
        {
            <footer class="c-quote__src u-small">@Model.Source</footer>
        }
    </blockquote>
}
