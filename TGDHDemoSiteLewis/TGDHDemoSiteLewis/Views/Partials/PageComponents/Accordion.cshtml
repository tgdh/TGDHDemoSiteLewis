@using UmbracoStarterKit.ExtensionMethods
@using UmbracoStarterKit.Core.Models.Components
@inherits UmbracoViewPage<TabListViewModel>
@{
	var count = 0;
	var first = "";
    if (!Model.Tabs.Any())
    {
        return;
    }
}

<div class="c-accordion js-accordion @Model.AdditionalClass @Model.WrapClasses">
    @foreach (var tab in Model.Tabs)
    {
		count++;
		if(count == 1)
		{
			first = "js-active"; 
		}
		else{
			first = "";
		}
		<div class="c-accordion_item @first">
			<span class="c-accordion__button">
				<i class="plus"></i>
				<i class="minus"></i>
			</span>
			<h2 class="c-accordion__header js-accordion__header u-delta js-toggle-accordion">@tab.Title</h2>
			<div class="c-accordion__content">
		        <div class="c-accordion__panel js-accordion__panel">
		            <div class="c-accordion__panel-inner">
		                @tab.Content
		            </div>
		        </div>
			</div>
		</div>
    }
</div>
